/* pages/find/find.wxss */
.loadMore{
  text-align: center;
  padding-bottom: 10px;
  padding-top: 4px;
}

.list_item {
    display: block;
    padding: 15px 15px 10px 10px;
    overflow: hidden;
    position: relative;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    border-bottom: 1px solid #e2e2e2;
}
.list_item .cover {
    float: left;
    margin-right: 10px;
}

.list_item .cover image{
  width: 100px;
  height: 70px;
}
.list_item .cont {
    overflow: hidden;
}
.list_item .cont .desc {
    font-size: 15px;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 1.3;
}

.list_item .cont .title {
    font-weight: 400;
    font-size: 18px;
    color: #000;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}