/* 引入模板样式  */

.scroll-list {
  width: 100%;
  height: 100vh;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

page {
  display: block;
  min-height: 100%;
  background-color: #f6f6f6;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding: 20rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title-back {
  font-weight: 500;
  color: green;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.post-title-front {
  font-weight: 500;
  color: #333;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.post-title-mobile {
  margin-left: 15rpx;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  margin-top: 16rpx;
  line-height: 40rpx;
  text-indent: 2em;
  text-align: left;
}

.post-address {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  line-height: 40rpx;
  text-align: left;
}

.post-customer {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  line-height: 40rpx;
  text-align: left;
}

.post-like {
  flex-direction: row;
  line-height: 16px;
  margin-bottom: 10rpx;
}

.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  color: #19be6b;
}

.post-like-font-right {
  margin-right: 10rpx;
  color: #19be6b;
  float: right;
}

.circle-float {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  bottom: 80rpx;
  right: 40rpx;
  background-color: #19be6b;
  color: #fff;
  border-radius: 100rpx;
  text-align: center;
  box-shadow: 4rpx 4rpx 6rpx #999;
  font-size: 52rpx;
  line-height: 110rpx;
  font-weight: 500;
}
.i-index{
  overflow: auto;
}