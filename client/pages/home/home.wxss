.swiper {
  height: 350rpx;
  width: 100%;
}

page {
  background-color: whitesmoke;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.news {
  padding: 20rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.post-container {
  margin-top: 5px;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title-back {
  font-weight: 500;
  color: green;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.post-title-front {
  font-weight: 500;
  color: red;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  margin-top: 16rpx;
  line-height: 40rpx;
  text-indent: 2em;
  text-align: left;
}

.post-address {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  line-height: 40rpx;
  text-align: left;
}

.post-customer {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  line-height: 40rpx;
  text-align: left;
}

.post-like {
  font-size: 32rpx;
  flex-direction: row;
  line-height: 16px;
}

.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  color: #2196f3;
}

.post-like-font-right {
  margin-right: 10rpx;
  color: #2196f3;
  float: right;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.menu_container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background-color: white;
}

.menu_item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  box-sizing: border-box;
  padding-bottom: 10px;
  padding-top: 10px;
}

.menu_icon {
  width: 20px;
  height: 20px;
  padding: 15px;
}

.new-icon-circle {
  display: flex;
  margin: auto;
  width: 50px;
  height: 50px;
  border-radius: 25px;
  text-align: center;
  color: #fff;
}
.circle-1{
  background-color: #FF3399;
}
.circle-2{
  background-color: #53c7ec;
}
.circle-3{
  background-color: #8a93f7;
}
.circle-4{
  background-color: #fdcf43;

}
.circle-5{
  background-color: #19be6b;

}
.circle-6{
  background-color: #FF9933;

}
.circle-7{
  background-color: #66CCCC;

}
.circle-8{
  background-color: #FF99CC;

}
