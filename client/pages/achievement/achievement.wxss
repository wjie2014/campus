.swiper {
  height: 350rpx;
  width: 100%;
}

page {
  background-color: whitesmoke;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.news {
  padding: 20rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}

.post-title-back {
  font-weight: 200;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.post-title-front {
  font-weight: 500;
  color: red;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  margin-top: 16rpx;
  line-height: 40rpx;
  text-indent: 2em;
  text-align: left;
}

.post-address {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  line-height: 40rpx;
  text-align: left;
}

.post-customer {
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  line-height: 40rpx;
  text-align: left;
}

.post-like {
  font-size: 32rpx;
  flex-direction: row;
  line-height: 16px;
}

.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  color: #2196f3;
}

.post-like-font-right {
  margin-right: 10rpx;
  color: #2196f3;
  float: right;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.post-container {
  background-color: #fff;
  margin-bottom: 6px;
}

.menu_container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background-color: white;
}

.loadMore {
  text-align: center;
  padding-bottom: 10px;
  padding-top: 4px;
}

.menu_item {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: left;
  align-items: left;
  font-size: 14px;
  box-sizing: border-box;
  padding-bottom: 10px;
  padding-top: 10px;
}

.logo {
  padding-bottom: 10px;
  padding-top: 13px;
  display: flex;
  width: 6%;
  padding-left: 10px;
  flex-direction: row;
  color: #f90;
  font-size: 16px;
}

.logo2 {
  padding-bottom: 10px;
  padding-top: 13px;
  display: flex;
  font-size: 16px;
  width: 6%;
  padding-left: 10px;
  flex-direction: row;
  color: #93f;
}

.logo3 {
  font-size: 14px;
  padding-bottom: 10px;
  padding-top: 13px;
  display: flex;
  width: 6%;
  padding-left: 10px;
  flex-direction: row;
  color: #f66;
}

.menu_item .name {
  display: flex;
  width: 20%;
  flex-direction: row;
  color: #f90;
}
