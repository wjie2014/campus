page {  
  display: block;  
  min-height: 100%;  
  background-color: #F6F6F6;  
} 
.post-detail{
  background-color: #F6F6F6;  
  color: #555;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: left;
  padding: 20rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;  
}

.post-title-back{
  font-weight: 500;
  color: green;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.post-title-front{
  font-weight: 500;
  color: #333;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.post-title-front-right{
font-weight: 500;
  color: #333;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}
.post-content{
  color: #555;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  margin-top: 16rpx;
  line-height: 40rpx;
  text-indent: 2em;
  text-align: left;
}
.post-address{
  color: #555;
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: left;
  padding: 20rpx;
  border-bottom: 1px solid #ededed;
}

.post-like{
  flex-direction: row;
  line-height: 16px;
  margin-bottom: 10rpx;
  padding: 20rpx;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  color: #2196F3;
}

.post-button-ready{
  float: right;
  margin-left: 20rpx;
  color: #2196F3;
}
.post-button-complete{
  float: right;
  margin-left: 20rpx;
  color: green;
}
.post-button-delete{
  float: right;
  color: red;
}
.view-button{
  padding: 10rpx;
}

.post-like-font-right{
  margin-right: 10rpx;
  color: #2196F3;
  float: right;
  font-size: 32rpx;

}
